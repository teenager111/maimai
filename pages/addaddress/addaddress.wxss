/* pages/address/address.wxss */
page{
  background: rgb(246, 247, 251);
}
.content{
  width: 100%;
  background: #FFFFFF; 
}

input{
  flex: 1;
  margin-right: 30rpx;
  text-align: right;
}
.name,.phone{
  margin-left: 30rpx;
  width: 720rpx;
  height: 92rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.border{
  border-bottom: 2rpx solid  #DEDFE0;
}
.name>text,.phone>text{
  color: #999999;
}
.area{
  margin-top: 10rpx;
  background: #FFFFFF;
  padding-left: 30rpx;
}
.picker{
  display: flex;
  height: 92rpx;
  align-items: center;
  font-size: 28rpx;
  color: #333333;
}
.picker>text{
  width: 120rpx;
 font-size: 28rpx;
 color: #999999;
}
.arrow{
  width: 32rpx;
  height: 32rpx;
  display: inline-flex;
  padding-top: 4rpx;
  padding-left: 20rpx;
  padding-right: 30rpx;
}
image{
  width: 100%;
  height: 100%;
}
.area_picker{
  flex: 1;
  display: inline-flex;
  justify-content: flex-end;
}
.areaname{
  width: 100%;
  height: 84rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.button{
  width: 100%;
  height: 100rpx;
  position: absolute;
  background: #61BA31;
  font-size: 32rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 100rpx;
  bottom: 0;
}